<?xml version="1.0" encoding="utf-8"?>
<!--
  Post-Playback Rating Overlay for Android TV
  Figma mapping and spacing notes (1080p baseline):
  - PIP: 16:9 container placed within overscan-safe margins (≥64dp from top/start)
  - Title: HeadingL (40sp) with 24dp top margin from PIP bottom
  - Helper: BodyL with 12dp top margin from title
  - Countdown: CaptionL with 12dp top margin from helper
  - Actions: horizontal row with 24dp gap; buttons 300x120dp, radius 32dp; Close default focus
  4K: all dp scale up; focus ring remains ≥4dp (drawable), ensuring visibility.
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rating_overlay_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_overlay">

    <!-- Background poster image (placeholder color used) -->
    <ImageView
        android:id="@+id/poster_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/rating_title"
        android:background="@drawable/poster_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dim layer to ensure text contrast -->
    <View
        android:id="@+id/dim_layer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66000000"
        app:layout_constraintTop_toTopOf="@id/poster_bg"
        app:layout_constraintBottom_toBottomOf="@id/poster_bg"
        app:layout_constraintStart_toStartOf="@id/poster_bg"
        app:layout_constraintEnd_toEndOf="@id/poster_bg" />

    <!-- PIP placeholder box (top-left safe area) -->
    <View
        android:id="@+id/pip_placeholder"
        android:layout_width="@dimen/rating_pip_width"
        android:layout_height="@dimen/rating_pip_height"
        android:background="@drawable/pip_placeholder_bg"
        android:contentDescription="@string/rating_pip_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/rating_pip_margin_start"
        android:layout_marginTop="@dimen/rating_pip_margin_top" />

    <!-- Title -->
    <TextView
        android:id="@+id/rating_title"
        style="@style/TextHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/rating_title"
        android:contentDescription="@string/rating_title"
        app:layout_constraintTop_toBottomOf="@id/pip_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/rating_pip_margin_start"
        android:layout_marginEnd="@dimen/rating_pip_margin_start"
        android:layout_marginTop="@dimen/rating_title_margin_top" />

    <!-- Helper -->
    <TextView
        android:id="@+id/rating_helper"
        style="@style/TextBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/rating_message"
        app:layout_constraintTop_toBottomOf="@id/rating_title"
        app:layout_constraintStart_toStartOf="@id/rating_title"
        app:layout_constraintEnd_toEndOf="@id/rating_title"
        android:layout_marginTop="@dimen/rating_helper_margin_top" />

    <!-- Countdown -->
    <TextView
        android:id="@+id/countdown_label"
        style="@style/TextHelper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_countdown"
        app:layout_constraintTop_toBottomOf="@id/rating_helper"
        app:layout_constraintStart_toStartOf="@id/rating_helper"
        android:layout_marginTop="@dimen/rating_countdown_margin_top" />

    <!-- Actions row -->
    <LinearLayout
        android:id="@+id/actions_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/countdown_label"
        app:layout_constraintStart_toStartOf="@id/rating_helper"
        android:layout_marginTop="@dimen/rating_actions_margin_top">

        <Button
            android:id="@+id/btn_close"
            style="@style/CtaButton"
            android:layout_width="@dimen/rating_actions_button_width"
            android:layout_height="@dimen/rating_actions_button_height"
            android:text="@string/rating_close"
            android:focusable="true" />

        <View
            android:layout_width="@dimen/rating_actions_gap_h"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btn_like"
            style="@style/CtaButton"
            android:layout_width="@dimen/rating_actions_button_width"
            android:layout_height="@dimen/rating_actions_button_height"
            android:text="@string/rating_like"
            android:focusable="true" />

        <View
            android:layout_width="@dimen/rating_actions_gap_h"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btn_love"
            style="@style/CtaButton"
            android:layout_width="@dimen/rating_actions_button_width"
            android:layout_height="@dimen/rating_actions_button_height"
            android:text="@string/rating_love"
            android:focusable="true" />

        <View
            android:layout_width="@dimen/rating_actions_gap_h"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btn_dislike"
            style="@style/CtaButton"
            android:layout_width="@dimen/rating_actions_button_width"
            android:layout_height="@dimen/rating_actions_button_height"
            android:text="@string/rating_dislike"
            android:focusable="true" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
