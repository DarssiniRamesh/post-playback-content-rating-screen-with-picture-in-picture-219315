<?xml version="1.0" encoding="utf-8"?>
<!-- Poster placeholder background with Ocean Professional tint -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark surface -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/tv_background" />
        </shape>
    </item>
    <!-- Light brand tint overlay -->
    <item android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A93C5FD" />
        </shape>
    </item>
</layer-list>
